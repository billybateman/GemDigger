package game.buttons{	import flash.display.*;	import flash.events.*;	import flash.utils.*;		import game.*;	import game.utils.*;	import game.controllers.*;			public class GameButton extends MovieClip	{		public var button:Sprite;		private var withSound:Boolean;		public static var soundManager:SoundManager;						public function GameButton( withSound:Boolean = true )		{			//TraceUtil.addLine( 'GameButton constr() >>> Creating Button' );						this.button				= ObjectUtils.getOverlay( this );			this.button.buttonMode	= true;						this.button.addEventListener( MouseEvent.MOUSE_OVER,	this.rollOver );			this.button.addEventListener( MouseEvent.MOUSE_OUT,		this.rollOut );			this.button.addEventListener( MouseEvent.MOUSE_DOWN,	this.click );			this.button.addEventListener( MouseEvent.MOUSE_UP,		this.release );						this.withSound = withSound;						if ( this.withSound ) {								//this.soundManager = SoundManager.instance;			}		} 						private function rollOut( event:Event ):void		{			this.gotoAndStop( 'up' );		}						private function rollOver( event:Event ):void		{			this.gotoAndStop( 'over' );		}						private function click( event:Event ):void		{			if ( this.withSound ) {								//this.soundManager.playSound( 'click' );			}						this.gotoAndStop( 'down' );		}						private function release( event:Event ):void		{			this.gotoAndStop( 'over' );		}	}}