package scenes{	import game.net.*;	import game.data.*;	import game.utils.*;	import game.events.*;	import game.scenes.*;	import game.controllers.*;	import flash.filters.*;	import flash.display.*;	import flash.events.*;	import flash.utils.*;	import flash.net.*;		import data.*;	import controllers.*;	import scenes.*;	import sounds.*;	public class HelpScene extends GameScene	{		public static const SCENE_NAME:String = 'HelpScene';		public var playBtn:SimpleButton;		public function HelpScene()		{			this.sceneName = HelpScene.SCENE_NAME;			super();		}		override protected function initScene():void		{			TraceUtil.addLine( 'HelpScene initScene() >>> Help Scene added to stage' );						playBtn.addEventListener( MouseEvent.MOUSE_DOWN, endScene );						MainData.totalScore = 0;					}		override protected function resetScene():void		{			if ( !GameController.soundManager.isPlaying( 'soundtrack' ) ) GameController.soundManager.playSound( 'soundtrack', true );					}		private function endScene( event:Event ):void		{			TraceUtil.addLine( 'HelpScene endScene()' );						GameData.nextScene = MainScene.SCENE_NAME;						GameController.sceneManager.startScene( MainScene.SCENE_NAME );					}	}}