package scenes{	import game.net.*;	import game.data.*;	import game.utils.*;	import game.events.*;	import game.scenes.*;	import game.controllers.*;	import game.text.*;	import flash.filters.*;	import flash.display.*;	import flash.events.*;	import flash.utils.*;	import flash.net.*;	import flash.text.*;		import data.*;	import controllers.*;	import scenes.*;	import sounds.*;	import text.*;		import fl.controls.TextArea; 	public class SummaryScene extends GameScene	{		public static const SCENE_NAME:String = 'SummaryScene';				public var replayBtn:SimpleButton;		private var scoreTxt:TextFinalScore;				public function SummaryScene()		{			this.sceneName = SummaryScene.SCENE_NAME;			super();		}		override protected function initScene():void		{			TraceUtil.addLine( 'SummaryScene initScene() >>> Summary Scene added to stage' );						replayBtn.addEventListener( MouseEvent.MOUSE_DOWN, endScene );						this.scoreTxt = new TextFinalScore();			this.scoreTxt.x = 60;			this.scoreTxt.y = 220;			this.addChild( this.scoreTxt );			this.scoreTxt.setText('0');					}				override protected function resetScene():void		{			TraceUtil.addLine( 'SummaryScene >>> resetScene()' );						if ( !GameController.soundManager.isPlaying( 'soundtrack' ) ) GameController.soundManager.playSound( 'soundtrack', true );						this.scoreTxt.text = String(MainData.totalScore);					}				private function sendGameOver():void		{			TraceUtil.addLine( 'SummaryScene sendGameOver() >>> Sending Game Over...' );						MainData.sendOver();						GameData.stage.dispatchEvent( new GameEvent( GameEvent.GAME_OVER ) );		}		private function endScene( event:Event ):void		{			TraceUtil.addLine( 'HelpScene endScene()' );						MainData.totalScore = 0;						MainScene.newScore = 0;						MainScene.updateScore(0);						GameData.nextScene = HelpScene.SCENE_NAME;						GameController.sceneManager.startScene( HelpScene.SCENE_NAME );					}	}}