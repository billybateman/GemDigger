package objects{	import text.*;	import data.*;	import controllers.*;	import objects.*;	import scenes.*;		import game.data.*;	import game.utils.*;	import game.controllers.*;		import flash.display.*;			public class ScoreBoard extends Sprite	{		private const POS_X:Number			= 30;		private const POS_Y:Number			= 85;						private var textScore:TextScore;						public function ScoreBoard()		{						this.x = POS_X;			this.y = POS_Y;						this.textScore	= new TextScore();			this.addChild( this.textScore );			this.textScore.setText(String(0));					}				public function setScore(newScore:String):void 		{			this.textScore.setText(newScore);		}							}}